{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.jacobsd32-cpu/djd-agent-score",
  "description": "Reputation scoring for AI agent wallets on Base. Trust scores, fraud checks, x402.",
  "repository": {
    "url": "https://github.com/jacobsd32-cpu/djd-agent-score-mcp",
    "source": "github"
  },
  "version": "1.1.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "djd-agent-score-mcp",
      "version": "1.1.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Base URL for the DJD Agent Score API (defaults to production)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "DJD_BASE_URL"
        },
        {
          "description": "Request timeout in milliseconds (default: 10000)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "DJD_TIMEOUT_MS"
        }
      ]
    }
  ]
}
